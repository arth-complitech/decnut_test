<p id="notice"><%= notice %></p>
<h3>Listing Pathways</h3><br>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Active</th>
        <th>Memo</th>
        <th>Pathway Type</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pathways.each do |pathway| %>
      <tr>
        <td><%= pathway.title %></td>
        <td><%= pathway.active %></td>
        <td><%= pathway.memo %></td>
        <td>
          <% if pathway.pathway_type == "Assignable" %>
          <%= link_to 'Assign to User', assign_user_path(pathway) %>
          <% else %>
          Library Pathway
          <% end %>
        </td>
        <td><%= link_to 'Show', pathway %></td>
        <td><%= link_to 'Edit', edit_pathway_path(pathway) %></td>
        <td><%= link_to 'Destroy', pathway, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Pathway', new_pathway_path %>
</div>