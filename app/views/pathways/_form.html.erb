<%= nested_form_for(@pathway) do |f| %>
  <% if @pathway.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pathway.errors.count, "error") %> prohibited this pathway from being saved:</h2>

      <ul>
      <% @pathway.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.label :memo %><br>
    <%= f.text_area :memo %>
  </div>

  <div class="field">
    <%= f.label :pathway_type %><br>
    <%= f.select :pathway_type, ["Reference", "Assignable"] %>
  </div>  
  <div class="field">
    <%= f.fields_for :steps do |step| %>
      <%= step.label :title %> <br>
      <%= step.text_field :title %><br>
      <%= step.label :subtitle %><br>
      <%= step.text_field :subtitle %><br>
      <%= step.label :body %> <br>
      <%= step.text_area :body %><br>
      <%= step.label :parent_step %> <br>
      <%= step.text_field :parent_step_id %><br>
      <%= step.label :url %> <br>
      <%= step.file_field :url_link %><br>
      <%= step.label :memo %> <br>
      <%= step.text_field :memo %><br>
      <%= step.link_to_remove "Remove this step" %>
    <% end %>
    <p><%= f.link_to_add "Add a step", :steps %></p>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
