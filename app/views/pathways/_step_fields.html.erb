<div id="stepdetails_<%= f.object.id %>">
	<div class="row panel panel-default" style="margin-left: 2px">
		<div class="panel-body">
			<div class="col-lg-4">
				<%= f.label :title %> <br>
				<%= f.text_field :title , :hide_label => true%><br>
				<%= f.label :body %> <br>
				<%= f.text_area :body , :hide_label => true%><br>
				<%= f.label :url %><br>
				<%= f.file_field :url_link , :hide_label => true%><br>
			</div>
			
			<div class="col-lg-4">
				<%= f.label :subtitle %><br>
				<%= f.text_field :subtitle , :hide_label => true%><br>
				<%= f.label :memo %> <br>
				<%= f.text_area :memo , :hide_label => true%><br>
				<%= f.label :active %>
				<%= f.check_box :active , :hide_label => true%><br>
				<%#= f.fields_for :pathways_steps do |pathways_step| %>
				<%#= pathways_step.text_field :display_order %>
				<%# end %>
			</div>
			<div class="col-lg-4">
				
			</div>
			<div class="panel-body">
			</div>
			<%= f.link_to_remove "Remove this step" %>
		</div>
	</div>
</div>