<%= bootstrap_form_for(@department) do |f| %>
<% if @department.errors.any? %>
<div id="error_explanation">
  <h4><%= pluralize(@department.errors.count, "error") %> prohibited this department from being saved:</h4>
  <ul>
    <% @department.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="col-lg-4">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name , :hide_label => true%>
    </div>
    <div class="field">
      <%= f.label :memo %><br>
      <%= f.text_area :memo , :hide_label => true%>
    </div>
    <div class="field">
      <%= f.label :group %><br>
      <%= f.select :group_id ,options_from_collection_for_select(Group.all,'id','name',@department.group_id) , :hide_label => true%>
    </div>
  </div>
  <div class="col-lg-4">
    <!--<div class="field">
      <%#= f.label :status %><br>
      <%#= f.text_field :status, :hide_label => true %>
    </div>-->
    
  </div>
  <div class="col-lg-4"></div>
</div>
<br>
<div class="actions">
  <%= f.submit  "data-disable-with"=> "Submiting..." , :class=>"btn btn-default"%>
</div>
<% end %>