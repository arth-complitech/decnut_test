<p id="notice"><%= notice %></p>
<div class="page-header">
	<div class="page-header-content">
		<div class="page-title">
			<h4>
			<%= link_to departments_path ,class: "text-semibold" do %>
			<i class="icon-arrow-left52 position-left"></i>
			<% end %>
			<span class="text-semibold">Departments</span> - Details of Department</h4>
			<ul class="breadcrumb breadcrumb-caret position-right">
				<li><a href="#">Dashboard</a></li>
				<li><a href="#">Departments</a></li>
				<li class="active">Details of Department</li>
			</ul>
		</div>
		<div class="heading-elements">
			<%= link_to edit_department_path ,:class=> "btn bg-blue btn-labeled heading-btn" do %>
			<b><i class="icon-pencil3"></i></b> Edit Department
			<% end %>
		</div>
	</div>
</div>
<div class="page-container">
	<div class="page-content">
		<!-- Main content -->
		<div class="content-wrapper">
			<!-- Simple lists -->
			<div class="row">
				<div class="col-md-6">
					<div class="panel panel-flat">
						<div class="panel-body">
							<strong>Name:</strong>
							<%= @department.name %><br>
							<!--<strong>Status:</strong>
							<%#= @department.status %><br>-->
							<strong>Memo:</strong>
							<%= @department.memo %><br>
							<strong>Group:</strong>
							<%= @department.group.try(:name) %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
