<div class="header-clear">
  
</div>
<p id="notice"><%= notice %></p>
<div class="content-strip">
  <div class="strip-content">
    <h4><%= @pathway.title %></h4>
    <p><%= @pathway.memo %></p>
    <i class="fa fa-list"></i>
  </div>
  <div class="overlay"></div>
  <!--<img class="preload-image" data-original="images/pictures/1.jpg" alt="img">-->
  <%= image_tag "pictures/1.jpg", :class => "preload-image", :alt => "img",:style => "display: block;" %>
</div>
<!--<h4><strong>Pathway :</strong>
<%= @pathway.title %></h4><br>
<h4>List of Steps</h4><br>-->
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Details of Step</th>
      </tr>
    </thead>
    <tbody>
      <% @steps.each do |step| %>
      <tr>
        <td><%= step.title %></td>
        <% if @completed_step_ids.present? and @completed_step_ids.include? step.id %>
        <td>Completed</td>
        <% else %>
        <td><%= link_to 'Details', pathway_step_path(params[:pathway_id],step) %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<% if @completed_step_ids.present? and (@pathway_steps_count == @completed_steps_count) %>
<%= form_tag(complete_pathway_path(@pathway), method: :post) do %>
<%= hidden_field_tag 'assignment_id', value = @assignment.id %>
<%= submit_tag "Close this pathway" , :class=>"btn btn-default"%>
<% end %>
<% end %>
<br>
<%=link_to "Back" , root_path %>