<div class="header-clear">
  
</div>
<p id="notice"><%= notice %></p>
<div class="content-strip">
  <div class="strip-content">
    <h4><%= @pathway.title %></h4>
    <p><%= @pathway.memo %></p>
    <i class="fa fa-list"></i>
  </div>
  <div class="overlay"></div>
  <!--<img class="preload-image" data-original="images/pictures/1.jpg" alt="img">-->
  <%= image_tag "pictures/1.jpg", :class => "preload-image", :alt => "img" %>
</div>
<!--<h4><strong>Pathway :</strong>
<%= @pathway.title %></h4><br>
<h4>List of Steps</h4><br>-->
<div class="content">
  <div class="thumb-layout thumb-layout-page">
    <% @steps.each do |step| %>
      <% if @completed_step_ids.present? and @completed_step_ids.include? step.id %>
        <%= image_tag "pictures/1t.jpg", :class => "preload-image", :alt => "img" %>
        <strong><%= step.title %></strong>
        <em><%= step.subtitle %></em>
      <% else %>
        <!--<a href="#">-->
        <%= link_to pathway_step_path(params[:pathway_id],step) do %>
        <!--<img class="preload-image" data-original="images/pictures/1t.jpg" alt="img">-->
        <%= image_tag "pictures/1t.jpg", :class => "preload-image", :alt => "img" %>
        <strong><%= step.title %></strong>
        <em><%= step.subtitle %></em>
        <!--</a>-->
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="decoration">
  </div>
  <!--<a href="#" class="load-more-thumbs button button-fullscreen button-green full-bottom">Load More</a>-->
  <% if @completed_step_ids.present? and (@pathway_steps_count == @completed_steps_count) %>
  <%= form_tag(complete_pathway_path(@pathway), method: :post) do %>
  <%= hidden_field_tag 'assignment_id', value = @assignment.id %>
  <%= submit_tag "Close this pathway" , :class=>"load-more-thumbs button button-fullscreen button-green full-bottom"%>
  <% end %>
  <% end %>
</div>
