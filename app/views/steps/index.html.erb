<style type="text/css">

  .content-strip .strip-content-cus {
    position: relative;
    z-index: 3;
  }

  .content-strip .strip-content-cus i {
    position: absolute;
    left: -10px;
    height: 100px;
    top: -45px;
    width: 25px;
    color: rgba(255,255,255,0.9);
    line-height: 93px;
    margin-left: 30px;
    font-size: 20px;
  }
</style>

<div class="header-fixed header-light">
    <a href="#" class="header-icon-1 open-left-sidebar"><i class="fa fa-navicon"></i></a>
    <h4 style="color:black;margin-top:20px;" class="text-center"><%= current_user.group.try(:name) %></h4>
    <%#= link_to "", :class => "header-logo" %>
    <a href="#" class="header-icon-4 open-right-sidebar"><i class="fa fa-envelope-o"></i></a>
</div>
<div class="header-clear">
</div>
<div class="content-strip" style="padding-top:10px;padding-bottom:10px;">
    <div class="strip-content-cus text-center">
        <%= link_to  root_path ,:style=>"margin-top:10px;" do %>
          <i class="fa fa-arrow-left page-blog-list-more" style="margin-top:inherit;"></i>
        <% end %>
        <h5 style="color:white;font-size:18px"><%= @pathway.title %></h4>
        <!-- <p><%= @pathway.memo %></p>
        <i class="fa fa-list"></i>-->
    </div>
    <div class="overlay"></div>
    <!--<img class="preload-image" data-original="images/pictures/1.jpg" alt="img">-->
    <%= image_tag "pictures/1.jpg", :class => "preload-image", :alt => "img",:style => "display: block;" %>
</div>
<div class="content">
    <div class="activity-item one-half-responsive">
     <% @pathways_steps.each_with_index do |pathways_step,index| %>
          <% if index > 0 %>
            <div class="decoration" style="margin-bottom:10px!important;"></div>
          <% end %>
          <%= link_to pathway_step_path(params[:pathway_id],pathways_step.step) , class: "fixed-step-height" do %>
                <% if @completed_step_ids.present? and @completed_step_ids.include? pathways_step.step.id %>
                     <i class="fa fa-check bg-green-dark activity-item-icon" style="background-color: #37C597!important;border-color:#37C597"></i>
                    <h5 class="padding-top-15"><%=pathways_step.step.title %></h5>
                        <!-- <div class="step_list_subtitle"><%=pathways_step.step.subtitle %></div> -->
                <% else %>
                    <% if @assignment.nil? %>
                        <div class="padding-top-12 pull-right">
                            <i class="fa fa-angle-right" style="color:#777777!important;position:inherit;padding-left:0px; font-size:1.5em;"></i>
                        </div>
                        <h5 class="padding-top-15 padding-left-0"><%= pathways_step.step.title %></h5>
                            <!-- <div class="step_list_subtitle" ><%= pathways_step.step.subtitle %></div> -->
                    <% else %>
                        <i class="fa fa-check activity-item-icon" style="color:#B9BCC0!important;border:1px solid #B9BCC0;"></i>
                        <h5 class="padding-top-15"><%= pathways_step.step.title %></h5>
                        
                    <% end %>
                <% end %>
          <% end %>
    <% end %>
    </div>
    <!--<div class="decoration"></div>-->
    <% if @completed_step_ids.present? and (@pathway_steps_count == @completed_steps_count) %>
    <%= form_tag(complete_pathway_path(@pathway), method: :post) do %>
    <%= hidden_field_tag 'assignment_id', value = @assignment.id %>
    <%= submit_tag "Close this pathway" , :class=>"button button-fullscreen button-green full-bottom"%>
    <% end %>
    <% end %>
</div>