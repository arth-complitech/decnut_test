<p id="notice"><%= notice %></p>
<h3>Listing Assignments</h3><br>
<div class="table-responsive">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Pathway Title</th>
				<th>status</th>
				<th>Memo</th>
				<th>Created by</th>
				<th>Assigned to</th>
				<th colspan="3">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @assignments.each do |assignment| %>
			<tr>
				<td><%= assignment.pathway.try(:title) %></td>
				<td><%= assignment.status %></td>
				<td><%= assignment.memo %></td>
				<td><%= assignment.creator_user_id %></td>
				<td><%= assignment.user.try(:fullname) %></td>
				<td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>