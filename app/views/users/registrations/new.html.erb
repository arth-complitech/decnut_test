<div class="container">
  <h2>Sign up</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-lg-4">
      <div class="field">
        <%= f.label :first_name ,:style=>"margin-left:0px"%>
        <%= f.text_field :first_name, autofocus: true , :hide_label => true %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="field">
        <%= f.label :last_name ,:style=>"margin-left:0px"%>
        <%= f.text_field :last_name , :hide_label => true%>
      </div>
    </div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="field">
        <%= f.label :title,:style=>"margin-left:0px" %>
        <%= f.text_field :title , :hide_label => true%>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="field">
        <%= f.label :mobile_number ,:style=>"margin-left:0px"%>
        <%= f.text_field :mobile_number , :hide_label => true%>
      </div>
    </div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="field">
        <%= f.label :email ,:style=>"margin-left:0px"%>
        <%= f.email_field :email, autofocus: true , :hide_label => true%>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="field">
        <%= label_tag('registration_code',nil,style: "margin-left:0px;")%>
        <%= text_field_tag("registration_code",nil ,class: "form-control")%>
      </div>
    </div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="field">
        <%= f.label :password ,:style=>"margin-left:0px"%>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> characters minimum)
        <% end %>
        <%= f.password_field :password, autocomplete: "off", :hide_label => true %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="field">
        <%= f.label :password_confirmation ,:style=>"margin-left:0px"%>(Enter same password again)<br>
        <%= f.password_field :password_confirmation, autocomplete: "off", :hide_label => true %>
      </div>
    </div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        <div class="col-lg-2">
          <div class="field">
            <%= f.radio_button :active,true%>
            <%= f.label :active ,:style=>"margin-left:0px"%>
          </div>
        </div>
        <div class="col-lg-2">
          <div class="field">
            <%= f.radio_button :active,false, :hide_label => true%>
            <%= f.label :inactive,:style=>"margin-left:0px" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4"></div>
    <div class="col-lg-4"></div>
  </div>
  <div class="actions">
    <br><%= f.submit "Sign up" %>
  </div>
  <% end %>
  <br>
  <%= render "users/shared/links" %>
</div>