<h2>Forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },:class=> "horizontal-form") do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true , :hide_label => true , :class => "form-control"%><br><br>
  </div>


  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>
	
